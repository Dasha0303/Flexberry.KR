<h3 class="ui header">{{t "forms.i-i-s-k-r-запись-мат-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерЗаписи
      class=(if (v-get validationModel "номерЗаписи" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-запись-мат-e.номерЗаписи-caption")
      data-test-i-i-s-k-r-запись-мат-e-номерЗаписи=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерЗаписи" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.материал
      class=(if (v-get validationModel "материал" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-запись-мат-e.материал-caption")
      data-test-i-i-s-k-r-запись-мат-e-материал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "материал" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.датаСоздания
      class=(if (v-get validationModel "датаСоздания" "isInvalid") "error")
      label=(t "forms.i-i-s-k-r-запись-мат-e.датаСоздания-caption")
      data-test-i-i-s-k-r-запись-мат-e-датаСоздания=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаСоздания" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-k-r-запись-мат-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="должность"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-k-r-запись-мат-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-k-r-запись-мат-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
</form>
